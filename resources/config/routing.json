{
  "route": {
    "comment_create": {
      "path": "/comment/new",
      "controller": "PhpLight\\CommentBundle\\Controller\\Comment",
      "action": "create"
    },
    "comment_get": {
      "path": "/comment/",
      "controller": "PhpLight\\CommentBundle\\Controller\\Comment",
      "action": "get"
    },
    "comment_count": {
      "path": "/comment/count/:filter?",
      "controller": "PhpLight\\CommentBundle\\Controller\\Comment",
      "action": "count"
    },
    "comment_delete": {
      "path": "/comment/:id",
      "controller": "PhpLight\\CommentBundle\\Controller\\Comment",
      "action": "delete"
    },
    "comment_edit": {
      "path": "/comment/:id",
      "controller": "PhpLight\\CommentBundle\\Controller\\Comment",
      "action": "edit"
    }
  }
}